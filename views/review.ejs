<%- include('partials/header'); -%>
<h1><strong><%=name%></strong></h1>
<h3>Drop In Your Reviews</h3>
<form method="POST" action="/review/rev">
    <div class="form-group">
        <label for="reviewer"> <strong> Your Name</strong></label>
        <input type="text" class="form-control" id="reviewer" name="reviewername"><br>
        <label for="class"><strong>Enter the book name</strong></label>
        <input type="text" class="form-control" id="revbook" name="revbookname"><br>
        <label for="class"><strong>What do you have to say??</strong></label>
        <input type="text" class="form-control" id="revcontent" name="revcontentname"><br>
            
    </div>

    <button type="submit" class="btn btn-dark mt-3">Submit</button>
</form>

<h3 class="mt-3">Reviews</h3>
<div class="row mt-3 text-center">
    <% docs.forEach(revent=>{%>
        <div class="col-lg-4 col-md-6 col-sm-12 mt-3">
            <div class="card" >
                <div class="card-body">
                  <h5 class="card-title"><%=revent.username%></h5>
                  <h6 class="card-text mt-3"><strong>Says...   </strong> <%=revent.revcontent%></h6>
                    
                </div>
              </div>
        </div>
    <%})%>
</div>

<%- include('partials/footer'); -%>